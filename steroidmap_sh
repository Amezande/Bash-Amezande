#!/bin/bash

ruta=$1

arch="/tmp/enemp.txt"
arci="/tmp/cabecera.txt"
log="/tmp/log.txt"

error="\e[1;31m"
exito="\e[1;32m"
stat=$?

trap ctrl_c INT

ctrl_c () {
  if [ "$stat" -eq "0"] ; then
    echo -e "${exito} Abierto"
  else
    echo -e "${error} Cerrado"
  fi
}

main () {
  if [ -z "$ruta" ] ; then
    echo -e "${error} Tiene que especificar una direcciÃ³n"
    exit 1
  fi

  nmap -sT -O $ruta > $arch
  if grep "open" $arch ; then 
    status
  fi

  host="http://$ruta"
  curl -s -I $host > $arch2
  echo -e "${exito} Cabecera" | cat - $arci > temp.txt && mv temp.txt $arci
  bat $arci | head -n 10

  if grep "Moved Permanently" $arci ; then
    host="https://$ruta"
    curl -s -I $host > $arci
    echo -e "${error} Intentando con: " | cat - $arci > temp.txt && mv temp.txt $arci
    bat $arci | head -n 10
  fi
}

main
